@model IEnumerable<PosWeb.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Customers</h1>
<div class="row">
    <div class="col-md-2">
        <partial name="StoreNav" />
    </div>

    <div class="col-md-10">
        <p>
            <a class="btn btn-primary" asp-action="Create">Add New Customer</a>
        </p>


            <table class="table table-striped">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>
                            <h6>S/N</h6>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.phonenumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.state)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phonenumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.state)
                            </td>
                            <td>
                                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


</div>

</div>


